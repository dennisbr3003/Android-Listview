<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/blobart_selection_list_background"
    android:weightSum="100">

    <ImageView
        android:id="@+id/imageview_icon"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_weight="0"
        android:contentDescription="@string/in_out_of_stock"
        android:padding="10dp"
        app:srcCompat="@mipmap/in_stock" />

    <LinearLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_abbreviation"
            android:text="@string/widget_default_abbr"
            style="@style/blobart_list_item_title" />

        <TextView
            android:id="@+id/textview_decsription"
            android:text="@string/widget_default_descr"
            style="@style/blobart_list_item_description" />

        <TextView
            android:id="@+id/textview_quantity"
            android:text="@string/quantity"
            style="@style/blobart_list_item_description"/>
    </LinearLayout>

</LinearLayout>
